<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common_pages.BakeryPage"
    android:paddingTop="20dp"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/menuicon" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/to_dashboard" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/heading5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurants"
            android:layout_centerInParent="true"
            android:textSize="50sp"
            android:fontFamily="@font/cursiveregular"
            android:textColor="@color/black"/>
        <TextView
            android:paddingTop="5dp"
            android:layout_below="@+id/heading5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enjoy From A Wide Variety"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:id="@+id/firstcard"
                    android:layout_width="175dp"
                    android:layout_height="180dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/indian"
                        android:layout_gravity="center"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INDIAN"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="25sp"
                        android:fontFamily="@font/black"
                        android:shadowColor="@color/black"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:backgroundTint="@color/black"/>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:id="@+id/secondcard"
                    android:layout_width="175dp"
                    android:layout_height="180dp"
                    android:layout_toRightOf="@+id/firstcard">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/italian"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ITALIAN"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="25sp"
                        android:fontFamily="@font/black"
                        android:shadowColor="@color/black"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:backgroundTint="@color/black"/>



                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:id="@+id/thirdcard"
                    android:layout_width="175dp"
                    android:layout_height="180dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/carribean"
                        android:layout_gravity="center"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CARIBBEAN"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="23sp"
                        android:fontFamily="@font/black"
                        android:shadowColor="@color/black"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:backgroundTint="@color/black"/>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:id="@+id/fourthcard"
                    android:layout_width="175dp"
                    android:layout_height="180dp"
                    android:layout_toRightOf="@+id/thirdcard">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/french"
                        android:layout_gravity="center"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FRENCH"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="25sp"
                        android:fontFamily="@font/black"
                        android:shadowColor="@color/black"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:backgroundTint="@color/black"/>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:id="@+id/fifthcard"
                    android:layout_width="175dp"
                    android:layout_height="180dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sushi"
                        android:layout_gravity="center"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUSHI"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="25sp"
                        android:fontFamily="@font/black"
                        android:shadowColor="@color/black"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:backgroundTint="@color/black"/>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:id="@+id/sixthcard"
                    android:layout_width="175dp"
                    android:layout_height="180dp"
                    android:layout_toRightOf="@+id/fifthcard">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/middleeastern"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MIDDLE EASTERN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="25sp"
                        android:fontFamily="@font/black"
                        android:shadowColor="@color/black"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:backgroundTint="@color/black"/>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>



        </LinearLayout>

    </ScrollView>
</LinearLayout>