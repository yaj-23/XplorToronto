<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common_pages.BakeryPage"
    android:paddingTop="20dp"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/menuicon" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/to_dashboard" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/heading4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ice Cream Shops"
            android:layout_centerInParent="true"
            android:textSize="50sp"
            android:fontFamily="@font/cursiveregular"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading4"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:text="Enjoy From A Wide Variety Of Local IceCream/Desert Shops"
            android:textColor="@color/black" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/firstcard"
                    android:layout_width="175dp"
                    android:layout_height="300dp"
                    android:layout_margin="5dp">


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <ImageView
                                android:id="@+id/ice_buisness_img"
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/qqthai_img" />

                            <TextView
                                android:id="@+id/ice_buisness_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/semibold"
                                android:text="QQ Thai IceCream"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="25sp" />

                            <RatingBar
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:rating="4.4" />

                            <TextView
                                android:id="@+id/ice_featured_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="QQ Thai Ice Cream is a Thai-style ice cream shop located in Scarborough. On the menu is a variety of Thai ice cream rolls in flavours of Oreo, matcha, mango, latte, strawberry, taro and more."
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>


                    </ScrollView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/secondcard"
                    android:layout_width="175dp"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/firstcard">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <ImageView
                                android:id="@+id/ice_buisness_img2"
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bangbangimg" />

                            <TextView
                                android:id="@+id/ice_buisness_title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/semibold"
                                android:text="Bang Bang IceCream"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="25sp" />

                            <RatingBar
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:rating="4.6" />

                            <TextView
                                android:id="@+id/ice_featured_description2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Ice cream sandwiches on housemade cookies, cups, cones and to-go tubs in a white and pale-wood space."
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>


                    </ScrollView>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/thirdcard"
                    android:layout_width="175dp"
                    android:layout_height="300dp"
                    android:layout_margin="5dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <ImageView
                                android:id="@+id/ice_buisness_img3"
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dutchdreamsimg" />

                            <TextView
                                android:id="@+id/ice_buisness_title3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/semibold"
                                android:text="Dutch Dreams"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="25sp" />

                            <RatingBar
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:rating="4.5" />

                            <TextView
                                android:id="@+id/ice_featured_description3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Veteran ice cream parlour offering a wide range of flavours, plus frozen yogurt, sundaes and shakes."
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>


                    </ScrollView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/fourthcard"
                    android:layout_width="175dp"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/thirdcard">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <ImageView
                                android:id="@+id/ice_buisness_img4"
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/arcticbitesimg" />

                            <TextView
                                android:id="@+id/ice_buisness_title4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/semibold"
                                android:text="Arctic Bites"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="25sp" />

                            <RatingBar
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:rating="4.4" />

                            <TextView
                                android:id="@+id/ice_featured_descriptio4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Tiny spot preparing made-to-order rolls of ice cream, topped with cereal, cookies and fruit."
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>


                    </ScrollView>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/fifthcard"
                    android:layout_width="175dp"
                    android:layout_height="300dp"
                    android:layout_margin="5dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <ImageView
                                android:id="@+id/ice_buisness_img5"
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/summersimg" />

                            <TextView
                                android:id="@+id/ice_buisness_title5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/semibold"
                                android:text="Summer's IceCream"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="25sp" />

                            <RatingBar
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:rating="4.5" />

                            <TextView
                                android:id="@+id/ice_featured_description5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Standby for homemade ice cream and fro-yo in a variety of flavours, plus smoothies and fruit juices."
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>


                    </ScrollView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/sixthcard"
                    android:layout_width="175dp"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/fifthcard">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <ImageView
                                android:id="@+id/ice_buisness_img6"
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/booyahimg" />

                            <TextView
                                android:id="@+id/ice_buisness_title6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/semibold"
                                android:text="Booyah"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="25sp" />

                            <RatingBar
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:rating="4.5" />

                            <TextView
                                android:id="@+id/ice_featured_description6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Parlour serving gourmet ice cream sandwiches made with homemade cookies, plus shakes, cones and more."
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>


                    </ScrollView>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>