<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/to_static_img"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/to" />

    <ImageView
        android:id="@+id/slider_image"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="@id/to_static_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/to_static_img"
        app:layout_constraintTop_toBottomOf="@+id/to_static_img"
        app:srcCompat="@drawable/on_boarding_img1" />

    <TextView
        android:id="@+id/slider_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:fontFamily="@font/meduim"
        android:gravity="center"
        android:text="Welcome to TORONTOâ€™s first
ONE-STOP location for all of
your needs"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_static_img" />


</androidx.constraintlayout.widget.ConstraintLayout>